<span class='w-100 ml-3 mb-3 font-weight-bold'>KİLİTLİ KART SAYISI: <span id='lock-card-piece'>{{lockCardPiece}}</span></span>

{{#each Cards}}
{{#lockCard @root.numLockCards id}}
<button type="button" class="btn btn-primary d-flex justify-content-between align-items-center"
  style='width:60px;height:60px;border-radius:5px;padding:10px;margin-left:10px;margin-bottom:10px;'
  onclick='ctx.onUnlockCard({{@root.tgID}},{{id}})'>
  Kilit Aç: {{id}}
</button>
{{else}}
<button type="button" class="btn btn-secondary d-flex justify-content-between align-items-center"
  style='width:60px;height:60px;border-radius:5px;padding:10px;margin-left:10px;margin-bottom:10px;'
  onclick='ctx.onLockCard({{@root.tgID}},{{id}})'>
  Kilitle: {{id}}
</button>
{{/lockCard}}
{{/each}}